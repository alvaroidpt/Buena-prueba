{
    "tags": {
        "allowUnknownTags": ["mermaid"]
    },
    "source": {
        "include": ["./src"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown",
        "jsdoc-mermaid"
    ],
    "opts": {
        "encoding": "utf8",
        "destination": "docs/",
        "readme": "./docs.md",
        "recurse": true,
        "verbose": true,
        "tutorials": "./tutorials"
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    }
}
